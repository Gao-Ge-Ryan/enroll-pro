<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.gaogle.dao.master.UserRoleMapper">
    <resultMap type="top.gaogle.pojo.model.UserRoleModel" id="UserRoleMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="roleId" column="role_id" jdbcType="VARCHAR"/>
        <result property="createBy" column="create_by" jdbcType="VARCHAR"/>
        <result property="createAt" column="create_at" jdbcType="INTEGER"/>
        <result property="updateBy" column="update_by" jdbcType="VARCHAR"/>
        <result property="updateAt" column="update_at" jdbcType="INTEGER"/>
        <result property="delFlag" column="del_flag" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="sqlAllColumns">
        id, account_by, role_id, create_by, create_at, update_by, update_at, del_flag
    </sql>
    <insert id="insert">
        insert into user_role(<include refid="sqlAllColumns"/>)
        values (#{id},#{accountBy}, #{roleId}, #{createBy}, #{createAt}, #{updateBy}, #{updateAt}, #{delFlag})
    </insert>
    <delete id="deleteByRoleId">
        delete
        from user_role
        where role_id = #{roleId}
    </delete>

    <delete id="deleteByAccountBy">
        delete
        from user_role
        where account_by = #{accountBy}
    </delete>

    <delete id="deleteEnterpriseUserByAccountByAndEnterpriseRoleId">
        delete
        from user_role
        where account_by = #{accountBy}
        and role_id IN
        <foreach collection="enterpriseRoleIds" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>
    <delete id="deleteByAccountBysAndEnterpriseRoleId">
        delete
        from user_role
        where account_by IN
        <foreach collection="accountBys" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
        and role_id IN
        <foreach collection="enterpriseRoleIds" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <select id="queryAccountBysByRoleId" resultType="java.lang.String">
        select account_by
        from user_role
        where role_id = #{roleId}
    </select>
    <select id="queryRoleIdByAccountBy" resultType="java.lang.String">
        select role_id
        from user_role
        where account_by = #{accountBy}
    </select>


</mapper>